<decorators defaultdir="/WEB-INF/decorator">

	<decorator name="all" page="decorator.jsp">
		<pattern>/**/*</pattern>
	</decorator>	

	<decorator name="openWindow" page="open_decorator.jsp">
		<pattern>/**/detail</pattern>
		<pattern>/**/regist</pattern>
		<pattern>/**/registForm</pattern>
	</decorator>

	<excludes>
		<pattern>/resources/*</pattern>
		<pattern>/member/loginForm</pattern>
	</excludes>
</decorators>